<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>KVM-LoadBusinessData</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <Flows>
        <Flow name="Status">
            <Description/>
            <Request/>
            <Response>
                <Step>
                    <Name>AM-Status</Name>
                </Step>
            </Response>
            <Condition>(proxy.pathsuffix MatchesPath "/status") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="Get Company Information">
            <Description/>
            <Request>
                <Step>
                    <Name>JS-BuildCompanyInfo</Name>
                </Step>
            </Request>
            <Response>
                <Step>
                    <Name>AM-CompanyInfo</Name>
                </Step>
            </Response>
            <Condition>(proxy.pathsuffix MatchesPath "/company-info") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="Employees">
            <Description>Get all employees</Description>
            <Request>
                <Step>
                    <Name>JS-BuildAllEmployees</Name>
                </Step>
            </Request>
            <Response>
                <Step>
                    <Name>AM-Employees</Name>
                </Step>
            </Response>
            <Condition>(proxy.pathsuffix MatchesPath "/employees") and (request.verb = "GET")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <HTTPProxyConnection>
        <BasePath>/bigtree-api</BasePath>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="noroute"/>
</ProxyEndpoint>